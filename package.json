{
  "private": true,
  "name": "fastingtime",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --dest dist --template src/template.html",
    "serve": "npm run -s build && preact serve",
    "dev": "preact watch",
    "test": "jest ./tests",
    "precommit": "pretty-quick --staged"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^24.7.1",
    "preact-cli": "^3.0.0-rc.9",
    "preact-render-spy": "^1.2.1",
    "preact-render-to-string": "^5.1.6",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "webpack-remove-serviceworker-plugin": "^1.0.0"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "emotion": "^9.2.12",
    "hijri-date": "^0.2.2",
    "preact": "^8.5.2",
    "preact-compat": "3.18.5",
    "preact-emotion": "^9.2.12",
    "preact-router": "^2.6.1",
    "requestanimationframe-timer": "^1.0.4",
    "xstate": "^4.9.1"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
